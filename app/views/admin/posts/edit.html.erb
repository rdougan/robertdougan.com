<%= stylesheet_link_tag "wmd/wmd.css", "admin" %>
<%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js" %>
<%= javascript_include_tag "wmd/jquery.wmd.js" %>

<section class="form">
<%= form_for [:admin, @post], :url => admin_post_url(@post), :method => :put do |f| %>
    <p>
        <%= f.text_field :name %><%= f.check_box :published, :tabindex => "0" %>
    </p>
    <p>
        <%=
        f.text_area :body, :id => "notes"
        %>
        <div id="notes-preview"></div>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
</section>

<% button_to "Delete", admin_post_path(@post), :method => :delete %>

<script type="text/javascript">
setup_wmd({
    "input": "notes",
    "preview": "notes-preview",
});
</script>
