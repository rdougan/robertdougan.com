source 'http://rubygems.org'

gem 'rails', '3.1.3'

group :production do
  gem 'pg'
end

group :development do
  gem 'sqlite3'
  gem 'puma'
end

gem 'json'

gem 'redcarpet'
gem 'pygments.rb'
gem 'permalink_fu'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.5'
  gem 'compass', '~> 0.12.alpha'
  gem 'uglifier', '>= 1.0.3'
  gem 'jquery-rails'
  gem "asset_sync"
end

gem 'execjs'
gem 'therubyracer'
gem 'devise'
